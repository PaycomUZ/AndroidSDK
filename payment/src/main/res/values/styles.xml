<resources>

  <!-- Base application theme. -->
  <style name="PaycomAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPaycomPrimary</item>
    <item name="colorPrimaryDark">@color/colorPaycomPrimaryDark</item>
    <item name="colorAccent">@color/colorPaycomAccent</item>
    <item name="android:buttonStyle">@style/PaycomButton</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="HorizontalDivider">
    <item name="android:background">@color/divider</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_marginTop">1dp</item>
  </style>

  <style name="PaycomButton" parent="android:style/Widget.Button">
    <item name="android:background">@color/colorPaycomAccent</item>
    <item name="android:textSize">@dimen/textSize_normal</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:padding">@dimen/margin_micro</item>
  </style>

</resources>